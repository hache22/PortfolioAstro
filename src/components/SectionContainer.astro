---
interface Props {
  id?: string;
  class?: string;
}

const { class: className, id } = Astro.props;
---

<section
  id={id}
  class:list={[
    "w-full mx-auto px-4 sm:px-6 md:px-8",
    "max-w-full sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl 2xl:max-w-7xl",
    "relative z-1",
    "scroll-mt-24",
    className,
  ]}
>
  <slot />
</section>
