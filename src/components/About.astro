<script>
    const dateFilter = document.getElementById('date-filter') as HTMLSelectElement;
    const certRows = document.querySelectorAll('.cert-row');

    if (dateFilter) {
        dateFilter.addEventListener('change', () => {
            const selectedYear = dateFilter.value;
            
            certRows.forEach((row: Element) => {
                const rowYear = row.getAttribute('data-date');
                if (selectedYear === 'all' || selectedYear === rowYear) {
                    (row as HTMLElement).style.display = '';
                } else {
                    (row as HTMLElement).style.display = 'none';
                }
            });
        });
    }
</script>

